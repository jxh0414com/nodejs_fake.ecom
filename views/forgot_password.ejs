<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="/public/css/forgot_password.css"
      rel="stylesheet"
      type="text/css"
    />
    <title>Forgot Password</title>
  </head>
  <body>
    <%- include layout/navbar %>
    <div class="forgot">
      <img
        class="other_banner"
        src="/public/images/others_banner.jpg"
        alt="banner_img"
      />
      <div>
        <div class="forgot_info">
          <h2>Forgot Password</h2>
          <form
            class="forgot_form"
            method="POST"
            action="/users/forgot_password"
          >
            <% if(messages && messages.length > 0) { %> <%
            messages.forEach(message => { %>
            <span><%= message %></span>
            <% })} %>
            <br />

            <label for="email"> Email: </label>
            <input type="text" name="email" />

            <button class="forgot_button" type="submit" value="Submit">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
    <%- include layout/footer %>
  </body>
</html>
