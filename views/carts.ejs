<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="/public/css/carts.css" rel="stylesheet" type="text/css" />
    <title>Carts</title>
  </head>
  <body>
    <%- include layout/navbar %>
    <div class="carts">
      <img
        class="other_banner"
        src="/public/images/others_banner.jpg"
        alt="banner_img"
      />
      <% if (products && products.length > 0) { %>
      <div class="carts_list">
        <div class="carts_header">
          <p>Item:</p>
          <p>Quantity:</p>
          <p>Price:</p>
          <p>Total&nbsp;Item&nbsp;Price:</p>
        </div>

          <% products.forEach(product=> { %>
          <div class="carts_item">
            <p><%= product.item.name %></p>
            <p><%= product.qty %> <i class="fas fa-cart-plus"></i></p>
            <p><%= product.item.price %></p>
            <p><%= product.price %></p>
            <a href=<%="/carts/increase/"+product.item._id %>> <i class="fas fa-plus-circle"></i></a>
            <a href=<%="/carts/reduce/"+product.item._id %>> <i class="fas fa-minus-circle"></i></a>
            <a href=<%="/carts/remove/"+product.item._id %>> <i class="fas fa-ban"></i></a>
          </div>
          <% }) %>
          <div class="total_price">
            <p>Total Price: <%= totalPrice %></p>
          </div>
          <a class="carts_continue" href="/products"> &#8592; Continue Shopping </a>
          <a class="carts_checkout" href="/carts/checkout" >Checkout &#8594;</a>
        <% } else { %>

          <div class="carts_empty">
            <img
              src="/public/images/Empty-Shopping-Cart3.png"
              alt="EmptyCart"
            />
            <p>Empty <a href="/products"> Go Shopping</a></p>
          </div>

          <% } %>
        </div>
      </div>
    </div>
    <%- include layout/footer %>
  </body>
</html>
